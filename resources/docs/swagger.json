    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Películas",
      "description": "Operaciones relacionadas con las películas"
    },
    {
      "name": "Actores",
      "description": "Operaciones relacionadas con los actores"
    },
    {
      "name": "Directores",
      "description": "Operaciones relacionadas con los directores"
    },
    {
      "name": "Géneros",
      "description": "Operaciones relacionadas con los géneros de las películas"
    },
    {
      "name": "Estudios",
      "description": "Operaciones relacionadas con los estudios de las películas"
    }
  ],
  "paths": {
    "/peliculas": {
      "get": {
        "tags": [
          "Películas"
        ],
        "summary": "Obtener todas las películas con filtros y paginación",
        "description": "Retorna una lista paginada de películas. Se pueden aplicar múltiples filtros: - Paginación: `per_page` (por defecto 10) y `page` (por defecto 1) - Ordenamientos: `orden_alfabetico`, `orden_estreno` y `orden_taquilla` (valores: `asc` o `desc`) - Filtros de contenido: `titulo`, `titulo_inicio`, `director`, `estudio`, `pais` - Filtros por rangos: `taquilla_inferior`, `taquilla_superior`, `estreno_inferior`, `estreno_superior` - Filtros múltiples (array): `generos` y `actores`\n",
        "parameters": [
          {
            "name": "per_page",
            "in": "query",
            "description": "Cantidad de resultados por página",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número de página a retornar",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "orden_alfabetico",
            "in": "query",
            "description": "Orden alfabético para el título (asc/desc)",
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ]
            }
          },
          {
            "name": "orden_estreno",
            "in": "query",
            "description": "Orden por fecha de estreno (asc/desc)",
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ]
            }
          },
          {
            "name": "orden_taquilla",
            "in": "query",
            "description": "Orden por recaudación (asc/desc)",
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ]
            }
          },
          {
            "name": "titulo",
            "in": "query",
            "description": "Filtro para buscar en el título de la película",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "titulo_inicio",
            "in": "query",
            "description": "Filtro para buscar películas cuyo título comience con un valor dado",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "director",
            "in": "query",
            "description": "Filtro para buscar por nombre (completo o parcial) del director",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "estudio",
            "in": "query",
            "description": "Filtro para buscar por nombre del estudio",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "pais",
            "in": "query",
            "description": "Filtro para buscar por país de origen",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "generos",
            "in": "query",
            "description": "Filtro para buscar por géneros (se puede enviar varios valores)",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "style": "form",
            "explode": true
          },
          {
            "name": "actores",
            "in": "query",
            "description": "Filtro para buscar por actores (se puede enviar varios valores)",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "style": "form",
            "explode": true
          },
          {
            "name": "taquilla_inferior",
            "in": "query",
            "description": "Recaudación mínima en taquilla",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "taquilla_superior",
            "in": "query",
            "description": "Recaudación máxima en taquilla",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "estreno_inferior",
            "in": "query",
            "description": "Fecha mínima de estreno (formato YYYY-MM-DD)",
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "estreno_superior",
            "in": "query",
            "description": "Fecha máxima de estreno (formato YYYY-MM-DD)",
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "estreno",
            "in": "query",
            "description": "Fecha de estreno exacta (formato YYYY-MM-DD)",
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de películas filtradas y paginadas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "peliculas": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/PeliculaDetail"
                      }
                    },
                    "status": {
                      "type": "integer",
                      "example": 200
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Películas"
        ],
        "summary": "Crear una nueva película",
        "description": "Crea una película registrando sus datos básicos, relaciones y recursos asociados.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "titulo": {
                    "type": "string"
                  },
                  "estreno": {
                    "type": "string",
                    "format": "date"
                  },
                  "taquilla": {
                    "type": "number"
                  },
                  "pais": {
                    "type": "string"
                  },
                  "estudio": {
                    "type": "string"
                  },
                  "director": {
                    "type": "object",
                    "properties": {
                      "nombre": {
                        "type": "string"
                      },
                      "apellido": {
                        "type": "string"
                      }
                    }
                  },
                  "generos": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "actores": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "nombre": {
                          "type": "string"
                        },
                        "apellido": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "posters": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "uri"
                    }
                  },
                  "sinopsis": {
                    "type": "string"
                  }
                },
                "required": [
                  "titulo",
                  "estreno",
                  "pais",
                  "estudio",
                  "director",
                  "generos",
                  "actores",
                  "posters",
                  "sinopsis"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Película creada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "pelicula": {
                      "$ref": "#/components/schemas/PeliculaDetail"
                    },
                    "status": {
                      "type": "integer",
                      "example": 201
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
